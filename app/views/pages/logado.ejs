<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
       
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            position: relative;
        }
       
        /* Estilo do botão redondo */
        .botao-redondo {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background-color: #016FA0;
            color: white;
            border: none;
            border-radius: 50%;
            width: 80px;
            height: 80px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 32px;
            cursor: pointer;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, transform 0.3s ease;
            z-index: 1000; /* Para ficar sempre por cima */
        }
       
        .botao-redondo:hover {
            background-color: #218838;
            transform: scale(1.1);
        }
 
        /* Estilo do menu de ícones e formulário */
        .menu {
            display: none; /* Inicialmente escondido */
            position: fixed;
            bottom: 120px;
            right: 30px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            z-index: 999;
        }
 
        .menu .item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            cursor: pointer;
        }
 
        .menu .item img {
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }
 
        /* Estilo do formulário */
        .modal {
            display: none; /* Inicialmente escondido */
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            width: 400px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            z-index: 10;
        }
 
        .modal .fechar-x {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            color: #888;
        }
 
        .modal .fechar-x:hover {
            color: #000;
        }
 
        /* Campos do formulário */
        .modal label {
            font-weight: bold;
            margin-top: 10px;
            display: block;
        }
 
        .modal input, .modal select, .modal textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }
 
        /* Botão Publicar */
        .publicar {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
 
        .publicar:hover {
            background-color: #218838;
        }
    </style>
    <title>Botão Redondo com Formulário</title>
</head>
<body>
 
    <!-- Botão redondo -->
    <button class="botao-redondo" onclick="mostrarMenu()">+</button>
 
    <!-- Menu de ícones -->
    <div class="menu" id="menu">
        <div class="item" onclick="mostrarFormulario('vaga')">
            <img src="imagens/mala-de-viagem.png" alt="Vagas">
            <span>Vagas de Emprego</span>
        </div>
        <div class="item" onclick="mostrarFormulario('moradia')">
            <img src="imagens/casa.png" alt="Imóveis">
            <span>Imóveis</span>
        </div>
    </div>
 
  <!-- Modal com o formulário -->

<div class="modal" id="modal">
    <span class="fechar-x" onclick="fecharModal()">&#10006;</span>
    <h2>Publicar Anúncio</h2>
    <form id="form-anuncio" style="display: none;" method="post" action="/gravarvagas">
        <div class="form-group">
            <label for="titulo">Título:</label>
            <input type="text" id="titulo" name="titulo" placeholder="Título do anúncio">
        </div>
        <div class="form-group">
            <label for="descricao">Descrição:</label>
            <textarea id="descricao" name="descricao" rows="4" placeholder="Descrição detalhada"></textarea>
        </div>
        <div class="form-group">
            <label for="preco-salario" id="label-preco-salario">Preço/Salário:</label>
            <input type="text" id="preco-salario" name="preco-salario" placeholder="Preço ou Salário">
        </div>

        <div class="extra-emprego" id="extra-emprego" style="display: none;">
            <div class="form-group">
                <label for="contato">Link da vaga ou WhatsApp:</label>
                <input type="text" id="contato" name="contato" placeholder="Link ou número de WhatsApp">
            </div>
        </div>

        <div class="campo-imagem" id="campo-imagem" style="display: block;">
            <div class="form-group">
                <label for="imagem">Imagem (opcional):</label>
                <input type="file" id="imagem" name="imagem">
            </div>
        </div>

        <!-- Campos de endereço para imóveis -->
        <span class="fechar-x" onclick="fecharModal()">&#10006;</span>
        <h2>Publicar Anúncio</h2>
        <form id="form-anuncio" style="display: none;" method="post" action="/gravarvagas">
        <div class="form-group">
            <label for="cep">CEP:</label>
            <input type="text" id="cep" name="cep" placeholder="Digite o CEP" onblur="buscarEndereco()">
        </div>
        <div class="form-group" id="endereco-imovel" style="display: none;">
            <label for="rua">Rua:</label>
            <input type="text" id="rua" name="rua" placeholder="Rua da casa">
            <label for="numero">Número:</label>
            <input type="text" id="numero" name="numero" placeholder="Número">
        </div>
        <div class="form-group" id="bairro-imovel" style="display: none;">
            <label for="bairro">Bairro:</label>
            <input type="text" id="bairro" name="bairro" placeholder="Bairro">
        </div>
        <div class="form-group" id="localidade-imovel" style="display: none;">
            <label for="cidade">Cidade/Estado:</label>
            <input type="text" id="cidade" name="cidade" placeholder="Cidade e Estado" readonly>
        </div>

        <div class="extra-info" id="extra-info" style="display: none;">
            <div class="form-group">
                <label for="quartos">Número de Quartos:</label>
                <select id="quartos" name="quartos">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4+</option>
                </select>
            </div>
            <div class="form-group">
                <label for="metros-quadrados">Metros Quadrados:</label>
                <input type="text" id="metros-quadrados" name="metros-quadrados" placeholder="Metros quadrados">
            </div>
            <div class="form-group">
                <label for="vaga-carro">Vaga para Carro:</label>
                <select id="vaga-carro" name="vaga-carro">
                    <option value="sim">Sim</option>
                    <option value="nao">Não</option>
                </select>
            </div>
            <div class="form-group">
                <label for="banheiros">Número de Banheiros:</label>
                <select id="banheiros" name="banheiros">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4+</option>
                </select>
            </div>
        </div>

        <button type="button" class="publicar" onclick="publicarAnuncio()">Publicar</button>
    </form>
</div>

<script>
    function mostrarMenu() {
        const menu = document.getElementById('menu');
        menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    function mostrarFormulario(tipo) {
        const form = document.getElementById('form-anuncio');
        form.style.display = 'block';
        document.getElementById('modal').style.display = 'block';
        document.getElementById('menu').style.display = 'none'; // Esconder menu

        const labelPrecoSalario = document.getElementById('label-preco-salario');
        const inputPrecoSalario = document.getElementById('preco-salario');
        const extraEmprego = document.getElementById('extra-emprego');
        const campoImagem = document.getElementById('campo-imagem');
        const extraInfo = document.getElementById('extra-info');
        const enderecoImovel = document.getElementById('endereco-imovel');
        const localidadeImovel = document.getElementById('localidade-imovel');
        const numeroImovel = document.getElementById('numero-imovel');
        const bairroImovel = document.getElementById('bairro-imovel');

        if (tipo === 'vaga') {
            labelPrecoSalario.textContent = 'Salário:';
            inputPrecoSalario.placeholder = 'Salário';
            extraEmprego.style.display = 'block';
            campoImagem.style.display = 'none';
            extraInfo.style.display = 'none';
            enderecoImovel.style.display = 'none';
            bairroImovel.style.display = 'none';
            localidadeImovel.style.display = 'none';
        } else {
            labelPrecoSalario.textContent = 'Preço:';
            inputPrecoSalario.placeholder = 'Preço';
            extraEmprego.style.display = 'none';
            campoImagem.style.display = 'block';
            extraInfo.style.display = 'block';
            enderecoImovel.style.display = 'block';
            bairroImovel.style.display = 'block';
            localidadeImovel.style.display = 'block';
        }
    }

    function buscarEndereco() {
        const cep = document.getElementById('cep').value.replace(/\D/g, '');
        if (cep.length === 8) {
            fetch(`https://viacep.com.br/ws/${cep}/json/`)
                .then(response => response.json())
                .then(data => {
                    if (!data.erro) {
                        document.getElementById('rua').value = data.logradouro;
                        document.getElementById('bairro').value = data.bairro;
                        document.getElementById('cidade').value = `${data.localidade} - ${data.uf}`;
                    } else {
                        alert('CEP não encontrado.');
                    }
                })
                .catch(() => alert('Erro ao buscar o CEP.'));
        }
    }

    function fecharModal() {
        document.getElementById('modal').style.display = 'none';
    }

    function publicarAnuncio() {
        const form = document.getElementById('form-anuncio');
        alert('Anúncio publicado com sucesso!');
        form.reset();
        fecharModal();
    }
</script>
