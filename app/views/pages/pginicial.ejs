    <script>
      // Script para alternar entre moradias e empregos
      document.querySelectorAll('input[name="slider"]').forEach(input => {
          input.addEventListener('change', function() {
              const id = this.id.split('-')[1];
              document.querySelectorAll('.tab-content').forEach(content => {
                  content.style.display = content.id === `content-${id}` ? 'block' : 'none';
              });
          });
      });



    
    // Para o link "Anunciar meu imóvel"
    document.getElementById('announce-property').addEventListener('click', function(event) {
        event.preventDefault(); // Evita comportamento padrão do link
        document.getElementById('plan-section').scrollIntoView({
            behavior: 'smooth' // Rolagem suave
        });
    });

    // Para o link "Anunciar minhas vagas"
    document.getElementById('announce-jobs').addEventListener('click', function(event) {
        event.preventDefault(); // Evita comportamento padrão do link
        document.getElementById('plan-section').scrollIntoView({
            behavior: 'smooth' // Rolagem suave
        });
    });     
  </script>
   <script>
    function mostrarModal() {
        document.getElementById('modal').style.display = 'block';
        document.getElementById('modal-fundo').style.display = 'block';
    }

    function fecharModal() {
        document.getElementById('modal').style.display = 'none';
        document.getElementById('modal-fundo').style.display = 'none';
    
    }

    function publicarAnuncio() {
        const form = document.getElementById('form-anuncio');
        const tipoAnuncio = document.getElementById('tipo-anuncio').value;

        if (tipoAnuncio === 'vaga') {
            form.action = '/empregos.ejs'; 
        } else if (tipoAnuncio === 'moradia') {
            form.action = '/casas.ejs'; 
        }

        
        form.submit();
    }
