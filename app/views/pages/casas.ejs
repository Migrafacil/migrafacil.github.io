    <script>
        
        function toggleFavorite(element) {
            element.classList.toggle('active');
            const isFavorite = element.classList.contains('active');
            const card = element.closest('.cartao-propriedade');
            const houseInfo = {
                imgSrc: card.querySelector('img').src,
                location: card.querySelector('.localizacao span').innerText,
                price: card.querySelector('.preco').innerText,
                size: card.querySelector('.info span').innerText,
            };

            let favorites = JSON.parse(localStorage.getItem('favorites')) || [];
            if (isFavorite) {
                favorites.push(houseInfo);
                alert('Essa casa foi adicionada aos seus favoritos!');
            } else {
                favorites = favorites.filter(fav => fav.location !== houseInfo.location);
                alert('Essa casa foi removida dos seus favoritos!');
            }
            localStorage.setItem('favorites', JSON.stringify(favorites));
        }

        function displayFavorites() {
            const favorites = JSON.parse(localStorage.getItem('favorites')) || [];
            const favoritesContainer = document.querySelector('.favoritos-container');
            
            if (favorites.length === 0) {
                favoritesContainer.innerHTML = '<p>Você ainda não tem favoritos.</p>';
                return;
            }
            
            favoritesContainer.innerHTML = favorites.map(fav => `
                <div class="favorito-card">
                    <img src="${fav.imgSrc}" alt="Favorito">
                    <div class="favorito-info">
                        <p>${fav.location}</p>
                        <p>${fav.price}</p>
                        <p>${fav.size}</p>
                    </div>
                </div>
            `).join('');
        }

        document.addEventListener('DOMContentLoaded', displayFavorites);
    </script>
