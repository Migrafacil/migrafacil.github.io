        }
        .cartao-propriedade {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            overflow: hidden;
            width: calc(33.333% - 20px);
            text-decoration: none;
            color: inherit;
            position: relative;
        }
        .cartao-propriedade img {
            width: 100%;
            height: 70%;
        }
        .detalhes {
