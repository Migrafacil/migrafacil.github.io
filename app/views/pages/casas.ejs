            color: red;
        }
        @media (max-width: 1200px) {
            .cartao-propriedade {
                width: calc(50% - 20px);
            }
        }
        @media (max-width: 768px) {
            .cartao-propriedade {
                width: 100%;
            }
            header {
                flex-direction: column;
                align-items: flex-start;
            }
            header input {
                width: 100%;
                max-width: none;
                margin-top: 10px;
            }
        }
        @media (max-width: 576px) {
            .cartao-propriedade {
                width: 100%;
            }
            .badge {
                top: 140px;
                left: 10px;
            }
            .badge-preco {
