<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Perfil</title>
    <link rel="stylesheet" href="css/perfil.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Página de Perfil</h1>
        </header>

        <section class="profile-info">
            <h2>Informações do Perfil</h2>
            <form id="profileForm">
                <div class="form-group">
                    <label for="email">E-mail atual:</label>
                    <input type="email" id="email" name="email" placeholder="Seu e-mail" required>
                    <label for="email">Novo e-mail:</label>
                    <input type="email" id="email" name="email" placeholder="Novo e-mail" required>
                </div>
                <div class="form-group">
                    <label for="password">Senha atual:</label>
                    <input type="password" id="password" name="password" placeholder="Sua senha" required>
                    <label for="password">Nova senha:</label>
                    <input type="password" id="password" name="password" placeholder="Nova senha" required>
                </div>
                <button type="submit">Salvar Alterações</button>
            </form>
        </section>

        <section class="plans">
            <h2>Planos Disponíveis</h2>
            <ul>
                <li>Plano Básico - R$ 50/mês</li>

                <button-cancelar type="submit">Cancelar plano</button>
                
            </ul>
        </section>

        <section class="listing">
            <h2>Publicar Anúncio</h2>
            <form id="form-anuncio">
                <label for="tipo-anuncio">Tipo de Anúncio:</label>
                <select id="tipo-anuncio" name="tipo-anuncio" onchange="verificarTipoAnuncio()">
                    <option value="">Escolha o tipo de anúncio</option>
                    <option value="vaga">Vaga de Emprego</option>
                    <option value="moradia">Moradia</option>
                </select>
       
                <label for="titulo">Título:</label>
                <input type="text" id="titulo" name="titulo" placeholder="Título do anúncio">
       
                <label for="descricao">Descrição:</label>
                <textarea id="descricao" name="descricao" rows="4" placeholder="Descrição detalhada"></textarea>
       
                <label for="preco-salario" id="label-preco-salario">Preço/Salário:</label>
                <input type="text" id="preco-salario" name="preco-salario" placeholder="Preço ou Salário">
       
                <div class="extra-emprego" id="extra-emprego">
                    <label for="contato">Link da vaga ou WhatsApp:</label>
                    <input type="text" id="contato" name="contato" placeholder="Link ou número de WhatsApp">
                </div>
       
                <div class="campo-imagem" id="campo-imagem">
                    <label for="imagem">Imagem (opcional):</label>
                    <input type="file" id="imagem" name="imagem">
                </div>
       
               
                <button type="button" class="publicar" onclick="publicarAnuncio()">Publicar</button>
            </form>
        </div>
       
        
        <script>
            function mostrarModal() {
                document.getElementById('modal').style.display = 'block';
                document.getElementById('modal-fundo').style.display = 'block';
            }
       
            function fecharModal() {
                document.getElementById('modal').style.display = 'none';
                document.getElementById('modal-fundo').style.display = 'none';
            }
       
            function verificarTipoAnuncio() {
                const tipoAnuncio = document.getElementById('tipo-anuncio').value;
                const labelPrecoSalario = document.getElementById('label-preco-salario');
                const inputPrecoSalario = document.getElementById('preco-salario');
                const campoImagem = document.getElementById('campo-imagem');
       
                if (tipoAnuncio === 'vaga') {
                    labelPrecoSalario.textContent = 'Salário:';
                    inputPrecoSalario.placeholder = 'Salário';
                    campoImagem.style.display = 'none'; // Esconder campo de imagem
                    document.getElementById('extra-emprego').style.display = 'block'; // Mostrar campo extra
                } else if (tipoAnuncio === 'moradia') {
                    labelPrecoSalario.textContent = 'Preço:';
                    inputPrecoSalario.placeholder = 'Preço';
                    campoImagem.style.display = 'block'; // Mostrar campo de imagem
                    document.getElementById('extra-emprego').style.display = 'none'; // Esconder campo extra
                }
            }
       
            function publicarAnuncio() {
                const form = document.getElementById('form-anuncio');
                const tipoAnuncio = document.getElementById('tipo-anuncio').value;
       
                // Definir a ação do formulário com base no tipo de anúncio
                if (tipoAnuncio === 'vaga') {
                    form.action = '/empregos.ejs'; // Enviar para empregos.ejs
                } else if (tipoAnuncio === 'moradia') {
                    form.action = '/casas.ejs'; // Enviar para casas.ejs
                }
       
                // Simular o envio do formulário (substituir com o método real de envio)
                form.submit();
            }
        </script>
       
    
       </body>
       </html>