<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuário</title>
    <link rel="stylesheet" href="/css/perfil.css">
</head>
<body>
    <!-- Ícone de perfil -->
    <div class="profile-icon" onclick="toggleMenu()">
        <img src="icone-de-perfil.png" alt="Perfil">
    </div>

    <!-- Menu lateral oculto -->
    <div id="sidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="toggleMenu()">&times;</a>
        <div class="menu-header">Opções de Conta</div>
        
        <!-- Formulário para alterar informações da conta -->
        <form id="accountForm" class="account-form">
            <label for="name">Nome:</label>
            <input type="text" id="name" name="name" value="Nome atual">
            
            <label for="email">E-mail:</label>
            <input type="email" id="email" name="email" value="email@exemplo.com">
            
            <label for="password">Senha:</label>
            <input type="password" id="password" name="password">
            
            <button type="submit">Salvar Alterações</button>
        </form>

        <hr>
        
        <!-- Botão para publicação -->
        <button class="publish-btn" onclick="openPublication()">Publicar Casa/Vaga</button>
    </div>

    <!-- Modal para publicar uma casa ou vaga -->
    <div id="publicationModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closePublication()">&times;</span>
            <h2>Publicar Casa ou Vaga de Emprego</h2>
            <form id="publicationForm">
                <label for="title">Título:</label>
                <input type="text" id="title" name="title" placeholder="Título da publicação">

                <label for="description">Descrição:</label>
                <textarea id="description" name="description" placeholder="Descrição completa"></textarea>

                <label for="type">Tipo:</label>
                <select id="type" name="type">
                    <option value="casa">Casa</option>
                    <option value="emprego">Emprego</option>
                </select>

                <button type="submit">Publicar</button>
            </form>
        </div>
    </div>

    <script src="/js/perfil.js"></script>
</body>
</html>
